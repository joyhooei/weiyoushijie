extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 广告
				div.box-icon
					a(href="/posters/new", class="btn-setting")
						i(class="halflings-icon plus")

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th
							th 标题
							th 链接
							th 是否显示
							th 显示分类
							th 显示顺序
							th 
					tbody
						- var states = ["不显示", "显示"]
						- each poster in posters
							tr
								td
									img(src="/medias/#{poster.get('media_id')}", width=50, height=50)
								td= poster.get('title')
								td= poster.get('internal_url')
								td= states[poster.get('state')]
								td= poster.get('category')
								td= poster.get('sequence')
								td.center
									a(class="btn btn-info", href="/posters/#{poster.id}/edit")
										i(class="halflings-icon white edit")
									a(class="rest btn btn-danger", href="/posters/#{poster.id}", data-method="DELETE")
										i(class="halflings-icon white trash")
