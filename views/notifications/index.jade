extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 通知
				div.box-icon
					a(href="/notifications/new?game=#{game}" class="btn-setting")
						i(class="halflings-icon plus")
						
			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 内容
							th 期限
							th 动作
							th
					tbody
						- var actions = ["继续运行", "重新启动"]
						- each notification in notifications
							tr
								td= notification.get('content')
								td= notification.get('deadline')
								td= actions[notification.get('action')]
								td.center
									a(class="rest btn btn-danger", href="/notifications/#{notification.id}", data-method="DELETE")
										i(class="halflings-icon white trash")
