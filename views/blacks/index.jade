extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 黑名单

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 玩家
							th 原因
							th
					tbody
						- each black in blacks
							tr
								td
									a(href="/customers/#{black.get('customer_id')}", target="_blank") #{black.get('customer_id')}
								td= black.get('reason')
								td.center
									a(class="rest btn btn-danger", href="/blacks/#{black.id}?game=#{game}", data-method="DELETE")
										i(class="halflings-icon white trash")
