extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 审计

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 时间
							th 玩家
							th 类别
							th 动作
							th 奖励
							th 领取
							th 详细
							th 结果
							th 错误
					tbody
						- each audit in audits
							tr
								td= moment(audit.createdAt).format()
								td
									a(href="/customers/#{audit.get('customer_id')}") #{audit.get('customer_id')}
								td= audit.get('category')
								td= audit.get('operator')
								td= audit.get('rewards')
								td= audit.get('claimed')
								td= audit.get('detail')
								td= audit.get('result')
								td= audit.get('error')

