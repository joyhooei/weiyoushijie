extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 账号
				div.box-icon
					a(href="/users/new" class="btn-setting")
						i(class="halflings-icon plus")

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 账号
							th 用户
							th
					tbody
						- each account in accounts
							tr
								td= account.get('username')
								td
									if account.customer
										a(href="/customers/#{account.customer.id}") #{account.customer.get('name')}
