extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 日志

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 版本
							th 异常
							th 信息
							th 链接
							th
					tbody
						- each log in logs
							tr
								td= log.get('version')
								td= log.get('message')
								td= log.get('exception')
								td= log.get('url')
								td.center
									a(class="rest btn btn-danger", href="/logs/#{log.id}?game=#{game}", data-method="DELETE")
										i(class="halflings-icon white trash")
