extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 礼物

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 类别
							th 奖章
							th 钻石
							th 金币
							th 上次领取
							th 数据
							th 状态
					tbody
						- each gift in gifts
							tr
								td= gift.get('category')
								td= gift.get('metal')
								td= gift.get('diamond')
								td= gift.get('gold')
								td= gift.get('last_pick_day')
								td= gift.get('data')
								td= gift.get('locked')
								
