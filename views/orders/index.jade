extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 直播

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 表演者
							th 名称
							th 在线人数
							th 观看人数
							th 打赏人数
							th 在线
							th 
					tbody
						- var lives = ['否', '是'];
						- each telecast in telecasts
							tr
								td
									a(href="/customers/#{telecast.customer.id}") #{telecast.customer.get('name')}
								td= telecast.get('name')
								td= telecast.get('total_members')
								td= telecast.get('total_viewers')
								td= telecast.get('total_rewards')
								td= lives[telecast.get('live')]
								td.center
									a(class="rest btn btn-danger", href="/telecasts/#{telecast.id}", data-method="DELETE")
										i(class="halflings-icon white trash")
