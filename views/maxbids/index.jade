extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 大标

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 日期
							th 投标人
							th 金额
					tbody
						- each maxbid in maxbids
							tr
								td= maxbid.get('day')
								td
									a(href="/customers/#{maxbid.get('customer_id')}") #{maxbid.get('name') || maxbid.get('customer_id')}
								td= maxbid.get('gold')
