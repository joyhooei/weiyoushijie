extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板
		li
			i.icon-angle-right
		li
			a(href="/customers") 用户


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 用户

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable")
					tbody
						tr
							td 头像
							td
								img(src="#{customer.get('avatar')}", width=50, height=50)
						tr
							td 姓名
							td= customer.get('name')
						tr
							td 奖章
							td= customer.get('metal')
						tr
							td 充值
							td= customer.get('charge')
						tr
							td VIP
							td= customer.get('vip')
						tr
							td 秒产
							td= customer.get('output')
						tr
							td 累计金币
							td= customer.get('acculumated_gold')
				div.btn-group
					a(href="/projects?customer_id=#{customer.id}", class="btn btn-primary") 项目
					a(href="/gifts?customer_id=#{customer.id}", class="btn btn-primary") 礼物
					a(href="/bids?customer_id=#{customer.id}", class="btn btn-primary") 投标
					a(href="/messages/new?customer_id=#{customer.id}", class="btn btn-primary") 发消息
					a(href="/blacklists/new?customer_id=#{customer.id}", class="btn btn-primary") 加入黑名单
