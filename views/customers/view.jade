extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板
		li
			i.icon-angle-right
		li
			a(href="/customers") 玩家


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 玩家

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable")
					tbody
						tr
							td 头像
							td
								img(src="#{customer.get('avatar')}", width=50, height=50)
						tr
							td 姓名
							td= customer.get('name')
						tr
							td 奖章
							td= customer.get('metal')
						tr
							td 钻石
							td= customer.get('diamond')	
						tr
							td 金币
							td= customer.get('gold')								
						tr
							td 充值
							td= customer.get('charge')
						tr
							td VIP
							td= customer.get('vip')
						tr
							td 秒产
							td= customer.get('output')
						tr
							td 累计金币
							td= customer.get('accumulated_gold')
						tr
							td 上次登录
							td= customer.get('last_login')
						
				div.btn-group
					a(href="/blacks/new?customer_id=#{customer.id}&game=#{game}", class="btn btn-primary") 加入黑名单
					a(href="/messages/new?customer_id=#{customer.id}&game=#{game}", class="btn btn-primary") 发送消息
					a(href="/projects?customer_id=#{customer.id}&game=#{game}&v=#{deployVersion}", class="btn btn-primary") 我的项目
					a(href="/gifts?customer_id=#{customer.id}&game=#{game}&v=#{deployVersion}", class="btn btn-primary") 我的礼物					
