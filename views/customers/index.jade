extends ../layout

block main
	ul.breadcrumb
		li
			i.icon-home
		li
			i.icon-angle-right
		li
			a(href="/") 面板


	div(class="row-fluid sortable")
		div(class="box span12")
			div(class="box-header", data-original-title)
				h2
					i(class="halflings-icon user")
					span.break
					| 玩家

			div.box-content
				table(class="table table-striped table-bordered bootstrap-datatable datatable")
					thead
						tr
							th 奖章
							th 名字
							th 头像
							th 充值
							th vip
							th 秒产
							th 版本
							th 上次登录
							th 渠道数据
							th id
					tbody
						- each customer in customers
							tr
								td= customer.get('metal')
								td
									a(href="/customers/#{customer.id}?game=#{game}", target="_blank") #{customer.get('name')}
								td
									img(src="#{customer.get('avatar')}", width=50, height=50)
								td= customer.get('charge')
								td= customer.get('vip')
								td= customer.get('output')
								td= customer.get('version')
								td= moment(new Date(customer.get('last_login'))).format()
								td= customer.get('channel_data')
								td= customer.id
